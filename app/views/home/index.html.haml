.home-page
  .content
    .d-flex.justify-content-between.align-items-center.me-4.ms-4.mt-4
      %p.h3 Tolsky Chat
      - if user_signed_in?
        = image_tag current_user.avatar.url(:thumb), size: 50
        = button_to 'Sign out', destroy_user_session_path, method: :delete
      - else
        = button_to 'Log in', new_user_session_path, method: :get, class: "btn btn-dark"
