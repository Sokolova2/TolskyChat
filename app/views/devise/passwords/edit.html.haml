%p.notice= notice
%p.alert= alert
.d-flex.justify-content-center.align-items-center
  = image_tag 'Tolsky.png', :size => '50'
  %p.fs-2.fw-bolder Tolsky
.d-flex.justify-content-center.align-items-center
  .d-block
    %h2.text-center.mb-4.h6 Change your password
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
      = render "devise/shared/error_messages", resource: resource
      = f.hidden_field :reset_password_token
      .mb-3
        .field
          = f.password_field :password, placeholder: 'password', autofocus: true, autocomplete: "new-password", class: 'form-control rounded-5'
      .mb-2
        .field
          = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'password confirmation', class: 'form-control rounded-5'
        .actions
          = f.submit "Change my password", class: 'button-authentication w-100 mt-3 text-light rounded-5'
    = render "devise/shared/links"
    = link_to 'Back', root_path, class: 'btn btn-light text-dark'