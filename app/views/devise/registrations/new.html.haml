%p.notice= notice
%p.alert= alert
.d-flex.justify-content-center.align-items-center
  .d-block
    %h2.text-center.mb-4.h6 Sign up
    = form_for(resource, as: resource_name, url: registration_path(resource_name), multipart: true) do |f|
      = render "devise/shared/error_messages", resource: resource
      .d-block.justify-content-center.align-items-center
        .mb-3.mt-3
          .field
            = f.text_field :first_name, placeholder: 'first name', class: 'form-control rounded-5 w-75 ms-5'
        .mb-3
          .field
            = f.text_field :last_name, placeholder: 'last name', class: 'form-control rounded-5 w-75 ms-5'
        .mb-3
          .field
            = f.text_field :login, placeholder: 'login', class: 'form-control rounded-5 w-75 ms-5'
        .mb-3
          .field
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email: example@gmail.com', class: 'form-control rounded-5 w-75 ms-5'
        .mb-3
          .field
            = f.telephone_field :phone_number, placeholder: 'phone number', class: 'form-control rounded-5 w-75 ms-5'
        .mb-1.ms-1
          .field.ms-5
            = f.label 'Date of birth'
        .mb-3.ms-1
          .field
            = f.date_field :birth_date, start_year: 1930, end_year: Date.today.year, class: 'form-control rounded-5 w-75 ms-5'
        .mb-3
          .field
            = f.file_field :avatar, placeholder: 'date of birth', class: 'form-control rounded-5 w-75 ms-5'
        .mb-3
          .field
            = f.password_field :password, autocomplete: "new-password", placeholder: 'password 6 symbols', class: 'form-control rounded-5 w-75 ms-5'
        .mb-3
          .field
            = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'password-confirmation', class: 'form-control rounded-5 w-75 ms-5'
        .mb-3
          .field
            = f.textarea :description, placeholder: 'About you', size: "70x5", class: 'form-control rounded-5 w-75 ms-5'
        .actions
          = f.submit "Sign up", class: 'btn btn-primary mt-3 text-light rounded-5 mb-3 w-75 ms-5'
    = render "devise/shared/links"
